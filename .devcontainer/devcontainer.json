{
  "name": "SleepLab",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "runServices": ["postgres"],
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "remoteEnv": {
    "SLEEPLAB_DB_DSN": "postgresql://sleeplab:sleeplab@postgres:5432/sleeplab"
  },
  "postCreateCommand": "set -eux; echo DEVCONTAINER_OK; python -V; echo \"DSN=$SLEEPLAB_DB_DSN\""
}
